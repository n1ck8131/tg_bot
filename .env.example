# ==============================================
# Telegram Bot Configuration
# ==============================================

# Токен бота от @BotFather (обязательно)
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ID администратора (обязательно)
# Узнать свой ID можно у @userinfobot
ADMIN_ID=123456789

# ID группового чата (обязательно)
# Добавьте бота в группу и используйте команду /start, чтобы узнать ID
# Или используйте @getmyid_bot в группе
GROUP_ID=-1001234567890

# ==============================================
# Контент для пользователей
# ==============================================

# Информация о дне рождения
BIRTHDAY_INFO=Дата: 15 марта 2026\nВремя: 18:00\nМесто: Ресторан "Звезда"

# Информация о выезде
TRIP_INFO=Дата выезда: 20 марта 2026\nМесто: База отдыха "Лесная"

# Ссылка на вишлист
WISHLIST_URL=https://example.com/wishlist

# ==============================================
# Яндекс Музыка (необязательно)
# ==============================================

# Токен Яндекс Музыки (необязательно)
# Получить можно через https://github.com/MarshalX/yandex-music-api
YANDEX_MUSIC_TOKEN=

# ID плейлиста в Яндекс Музыке (необязательно)
# Найти можно в URL плейлиста: music.yandex.ru/users/USERNAME/playlists/PLAYLIST_KIND
YANDEX_PLAYLIST_KIND=
